<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- 圖書表單視圖 -->
        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">library.book.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Book">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_borrowings" class="oe_stat_button" icon="fa-history">
                                <field name="borrowed_count" widget="statinfo" string="Borrowings"/>
                            </button>
                            <button type="object" name="action_quick_borrow" class="oe_stat_button" icon="fa-hand-o-right" invisible="available_quantity == 0">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Quick Borrow</span>
                                </div>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        
                        <field name="cover_image" widget="image" class="oe_avatar" options="{'preview_image': 'cover_image', 'size': [90, 120]}"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Book Title..." required="1"/>
                            </h1>
                            <div class="d-flex">
                                <field name="is_available" invisible="1"/>
                                <span class="badge text-bg-success" invisible="not is_available">
                                    <i class="fa fa-check"/> Available
                                </span>
                                <span class="badge text-bg-danger" invisible="is_available">
                                    <i class="fa fa-times"/> Out of Stock
                                </span>
                            </div>
                        </div>
                        
                        <group name="main_info">
                            <group name="basic_info" string="Basic Information">
                                <field name="isbn" placeholder="978-0-123456-78-9"/>
                                <field name="author" placeholder="Author Name"/>
                                <field name="publisher" placeholder="Publisher Name"/>
                                <field name="publish_date"/>
                                <field name="category_id" options="{'no_create': True}"/>
                            </group>
                            <group name="stock_info" string="Stock Information">
                                <field name="quantity"/>
                                <field name="available_quantity"/>
                                <field name="pages"/>
                                <field name="language"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" placeholder="Book description or summary..."/>
                            </page>
                            <page string="Borrowing History" name="borrowing_history">
                                <field name="borrowing_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="borrow_date"/>
                                        <field name="due_date"/>
                                        <field name="return_date"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <chatter/>
                </form>
            </field>
        </record>
        
        <!-- 圖書列表視圖 -->
        <record id="library_book_view_tree" model="ir.ui.view">
            <field name="name">library.book.tree</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <list string="Books" 
                      sample="1" 
                      multi_edit="1"
                      decoration-danger="available_quantity == 0"
                      decoration-success="available_quantity &gt; 0">
                    <field name="name" readonly="1"/>
                    <field name="isbn" optional="show"/>
                    <field name="author"/>
                    <field name="category_id"/>
                    <field name="publisher" optional="hide"/>
                    <field name="publish_date" optional="hide"/>
                    <field name="quantity" sum="Total Quantity"/>
                    <field name="available_quantity" sum="Total Available"/>
                    <field name="language" optional="hide"/>
                    <field name="active" widget="boolean_toggle" optional="show"/>
                </list>
            </field>
        </record>
        
        <!-- 圖書搜尋視圖 -->
        <record id="library_book_view_search" model="ir.ui.view">
            <field name="name">library.book.search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="isbn"/>
                    <field name="author"/>
                    <field name="category_id"/>
                </search>
            </field>
        </record>
        
        <!-- 圖書看板視圖 -->
        <record id="library_book_view_kanban" model="ir.ui.view">
            <field name="name">library.book.kanban</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <kanban default_group_by="category_id" sample="1" quick_create="false">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="isbn"/>
                    <field name="category_id"/>
                    <field name="quantity"/>
                    <field name="available_quantity"/>
                    <field name="cover_image"/>
                    <field name="is_available"/>
                    
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside>
                                <field name="cover_image" widget="image" options="{'size': [80, 120]}"/>
                            </aside>
                            <main class="ms-2">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <span t-if="record.is_available.raw_value" class="badge text-bg-success">
                                            <i class="fa fa-check"/> Available
                                        </span>
                                        <span t-else="" class="badge text-bg-danger">
                                            <i class="fa fa-times"/> Out of Stock
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div>
                                            <i class="fa fa-user"/> <field name="author"/>
                                        </div>
                                        <div t-if="record.isbn.raw_value">
                                            <i class="fa fa-barcode"/> <field name="isbn"/>
                                        </div>
                                        <div class="mt-2">
                                            <span class="badge text-bg-info">
                                                Stock: <field name="available_quantity"/>/<field name="quantity"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
    </data>
</odoo>

