<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- 圖書分類列表視圖 -->
        <record id="library_book_category_view_tree" model="ir.ui.view">
            <field name="name">library.book.category.tree</field>
            <field name="model">library.book.category</field>
            <field name="arch" type="xml">
                <list string="Book Categories" editable="bottom" sample="1">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description" optional="hide"/>
                    <field name="book_count" string="Books"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>
        
        <!-- 圖書分類表單視圖 -->
        <record id="library_book_category_view_form" model="ir.ui.view">
            <field name="name">library.book.category.form</field>
            <field name="model">library.book.category</field>
            <field name="arch" type="xml">
                <form string="Book Category">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        
                        <group>
                            <group>
                                <field name="name" placeholder="e.g., Literature"/>
                                <field name="code" placeholder="e.g., LIT"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="book_count" string="Books"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="description" placeholder="Category description..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- 圖書分類搜尋視圖 -->
        <record id="library_book_category_view_search" model="ir.ui.view">
            <field name="name">library.book.category.search</field>
            <field name="model">library.book.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>
        
    </data>
</odoo>

