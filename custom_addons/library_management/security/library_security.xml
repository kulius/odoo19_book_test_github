<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- 圖書館管理類別 -->
        <record id="module_library_category" model="ir.module.category">
            <field name="name">Library</field>
            <field name="description">圖書館管理系統權限</field>
            <field name="sequence">10</field>
        </record>
        
        <!-- 權限等級 (Odoo 19) -->
        <record id="res_groups_privilege_library" model="res.groups.privilege">
            <field name="name">Library</field>
            <field name="sequence">10</field>
            <field name="category_id" ref="module_library_category"/>
        </record>
        
        <!-- 一般使用者群組 -->
        <record id="group_library_user" model="res.groups">
            <field name="name">User</field>
            <field name="sequence">10</field>
            <field name="privilege_id" ref="res_groups_privilege_library"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">一般使用者可以查看書籍資訊</field>
        </record>
        
        <!-- 圖書管理員群組 -->
        <record id="group_library_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="sequence">20</field>
            <field name="privilege_id" ref="res_groups_privilege_library"/>
            <field name="implied_ids" eval="[(4, ref('group_library_user'))]"/>
            <field name="comment">圖書管理員可以管理所有書籍和分類</field>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
    </data>
    
    <!-- 記錄規則 -->
    <data noupdate="1">
        
        <!-- 借閱記錄規則：使用者只能看到自己的借閱記錄 -->
        <record id="library_borrowing_rule_user" model="ir.rule">
            <field name="name">Library Borrowing: User - Own Records</field>
            <field name="model_id" ref="model_library_borrowing"/>
            <field name="domain_force">[('partner_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_library_user'))]"/>
        </record>
        
        <!-- 借閱記錄規則：管理員可以看到所有借閱記錄 -->
        <record id="library_borrowing_rule_manager" model="ir.rule">
            <field name="name">Library Borrowing: Manager - All Records</field>
            <field name="model_id" ref="model_library_borrowing"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_library_manager'))]"/>
        </record>
        
    </data>
</odoo>

