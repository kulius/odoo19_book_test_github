<odoo>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        
                    </div>
                    <group>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="state"/>
                            <field name="property_type_id"/> <!-- 新增這一行 -->
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/> <!-- 新增這一行 -->
                        </group>
                    </group>
                    <notebook>
                    <page string="Offers">
                        <field name="offer_ids">
                            <!-- 我們可以為這個內嵌的列表定義一個專屬的 list view -->
                            <list>
                                <field name="price"/>
                                <field name="partner_id"/>
                                <field name="status"/>
                            </list>
                        </field>
                    </page>

                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="total_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="seller_id"/>
                                <field name="buyer_id"/>
                                <field name="active"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property">
                <field name="name"/>
                <field name="postcode"/>
                <separator/>
                <filter name="available" string="Available" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <separator/>
                <group>
                    <filter string="Postcode" name="group_by_postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>